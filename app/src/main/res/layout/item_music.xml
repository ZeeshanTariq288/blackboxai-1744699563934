<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvSurahNameEnglish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Surah Name English"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPlay"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/tvSurahNameArabic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سُوْرَۃُ الفَاتِحَة"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSurahNameEnglish" />

    <TextView
        android:id="@+id/tvSurahNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surah No: 1"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tvSurahNameArabic"
        app:layout_constraintTop_toBottomOf="@id/tvSurahNameEnglish"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tvNumberOfVerses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verses: 7"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tvSurahNumber"
        app:layout_constraintTop_toBottomOf="@id/tvSurahNameEnglish"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tvPlaceOfRevelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makkah"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tvNumberOfVerses"
        app:layout_constraintTop_toBottomOf="@id/tvSurahNameEnglish"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Play"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
